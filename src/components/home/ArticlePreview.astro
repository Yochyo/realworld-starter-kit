---
import type { ArticlesDTO } from "../../api/api";
import Article from "./Article.astro";
import Pagination from "./Pagination.astro";

export type Props = { articles: Promise<ArticlesDTO> };
const articles = await Astro.props.articles;
---

{articles.articles && articles.articles.map((article) => <Article article={article} />)}
{articles.articlesCount > 0 && <Pagination totalArticles={articles.articlesCount}/>}